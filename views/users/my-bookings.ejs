<% layout("/layouts/boilerplate") -%>

<style>

    .booking-card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        overflow: hidden;
    }
    
    .booking-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }
    
    .status-badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-weight: 500;
        text-transform: capitalize;
    }
    
    .status-pending { background-color: #ffc107; color: #000; }
    .status-approved { background-color: #28a745; color: #fff; }
    .status-rejected { background-color: #dc3545; color: #fff; }
    .status-completed { background-color: green; color: #fff; }
    
    .booking-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1rem;
    }
    
    .detail-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        padding: 0.25rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    
    .detail-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }
    
    .detail-label {
        font-weight: 600;
        color: #495057;
    }
    
    .detail-value {
        color: #6c757d;
    }
    
    .listing-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
        cursor: pointer;
        transition: transform 0.3s ease;
    }
    
    .listing-image:hover {
        transform: scale(1.05);
    }
    
    .price-tag {
        background: linear-gradient(135deg, #fe424d, #ff6b6b);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: bold;
        font-size: 1.1rem;
        display: inline-block;
        margin-bottom: 1rem;
        box-shadow: 0 4px 15px rgba(254, 66, 77, 0.3);
    }
    
    .image-container {
        position: relative;
        overflow: hidden;
        border-radius: 8px;
    }
    
    .clickable-image {
        position: relative;
        cursor: pointer;
    }
    
    .clickable-image::after {
        content: "Click to view listing";
        position: absolute;
        bottom: 10px;
        left: 10px;
        background: rgba(0,0,0,0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .clickable-image:hover::after {
        opacity: 1;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: #dee2e6;
        margin-bottom: 1rem;
    }


</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-calendar-check me-2"
                    style="color: #fe424d;"></i>
                My Bookings
            </h2>

            <% if (typeof selectedStatus !== 'undefined') { %>
            <ul class="nav nav-pills mb-4">
                <li class="nav-item">
                    <a
                        class="nav-link <%= selectedStatus==='all' ? 'active' : '' %>"
                        href="/my-bookings?status=all">
                        All
                        <span class="badge bg-light text-dark ms-1"><%=
                            (statusCounts && statusCounts.all) || 0 %></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link <%= selectedStatus==='pending' ? 'active' : '' %>"
                        href="/my-bookings?status=pending">
                        Pending
                        <span class="badge bg-light text-dark ms-1"><%=
                            (statusCounts && statusCounts.pending) || 0
                            %></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link <%= selectedStatus==='approved' ? 'active' : '' %>"
                        href="/my-bookings?status=approved">
                        Approved
                        <span class="badge bg-light text-dark ms-1"><%=
                            (statusCounts && statusCounts.approved) || 0
                            %></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link <%= selectedStatus==='rejected' ? 'active' : '' %>"
                        href="/my-bookings?status=rejected">
                        Rejected
                        <span class="badge bg-light text-dark ms-1"><%=
                            (statusCounts && statusCounts.rejected) || 0
                            %></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link <%= selectedStatus==='completed' ? 'active' : '' %>"
                        href="/my-bookings?status=completed">
                        Completed
                        <span class="badge bg-light text-dark ms-1"><%=
                            (statusCounts && statusCounts.completed) || 0
                            %></span>
                    </a>
                </li>
            </ul>
            <% } %>

            <% if (bookings && bookings.length > 0) { %>
            <div class="row">
                <% bookings.forEach(booking => { %>
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card booking-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-5">
                                    <% if (booking.listing) { %>
                                    <div
                                        class="image-container clickable-image">
                                        <a
                                            href="/listings/<%= booking.listing._id %>">
                                            <img
                                                src="<%= booking.listing.image.url %>"
                                                alt="<%= booking.listing.title %>"
                                                class="listing-image mb-3">
                                        </a>
                                    </div>
                                    <% } else { %>
                                    <div
                                        class="listing-image mb-3 d-flex align-items-center justify-content-center bg-light">
                                        <i
                                            class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                    <% } %>
                                </div>
                                <div class="col-md-7">
                                    <div
                                        class="d-flex justify-content-between align-items-start mb-2 mt-3">
                                        <h5 class="card-title mb-0">
                                            <% if (booking.listing) { %>
                                            <%= booking.listing.title %>
                                            <% } else { %>
                                            <span class="text-muted">Listing
                                                Deleted</span>
                                            <% } %>
                                        </h5>
                                        <% const statusToShow =
                                        (booking.displayStatus ||
                                        booking.status); %>
                                        <span
                                            class="status-badge <%= 'status-' + statusToShow %>">
                                            <%=
                                            statusToShow.charAt(0).toUpperCase()
                                            + statusToShow.slice(1) %>
                                        </span>
                                    </div>

                                    <% if (booking.listing &&
                                    booking.listing.price) { %>
                                    <div class="price-tag mb-3">
                                        <i class="fas fa-tag me-2"></i>
                                        &#8377; <%=
                                        (booking.listing.price+
                                        booking.listing.price*0.18).toLocaleString("en-IN")
                                        %> / day
                                    </div>
                                    <% } %>

                                    <div class="booking-details">
                                        <div class="detail-item">
                                            <span class="detail-label">Full
                                                Name:</span>
                                            <span class="detail-value"><%=
                                                booking.fullName %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span
                                                class="detail-label">Mobile:</span>
                                            <span class="detail-value"><%=
                                                booking.mobileNumber %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Pickup
                                                Date:</span>
                                            <span class="detail-value">
                                                <%= booking.pickupDate ? new
                                                Date(booking.pickupDate).toLocaleDateString()
                                                : 'N/A' %>
                                            </span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Pickup
                                                Time:</span>
                                            <span class="detail-value"><%=
                                                booking.pickupTime %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Return
                                                Date:</span>
                                            <span class="detail-value">
                                                <%= booking.returnDate ? new
                                                Date(booking.returnDate).toLocaleDateString()
                                                : 'N/A' %>
                                            </span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Return
                                                Time:</span>
                                            <span class="detail-value"><%=
                                                booking.returnTime %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span
                                                class="detail-label">Request
                                                Date:</span>
                                            <span class="detail-value">
                                                <%=
                                                booking.createdAt.toLocaleDateString()
                                                %>
                                            </span>
                                        </div>
                                    </div>

                                    <% if (booking.calculated) { %>
                                    <div class="booking-details">
                                        <div class="detail-item">
                                            <span class="detail-label">Rental
                                                Days:</span>
                                            <span class="detail-value"><%=
                                                booking.calculated.rentalDays
                                                %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span
                                                class="detail-label">Price/Day:</span>
                                            <span class="detail-value">&#8377;
                                                <%=
                                                booking.calculated.pricePerDay.toLocaleString('en-IN')
                                                %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span
                                                class="detail-label">Subtotal:</span>
                                            <span class="detail-value">&#8377;
                                                <%=
                                                booking.calculated.subtotal.toLocaleString('en-IN')
                                                %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">GST
                                                (18%):</span>
                                            <span class="detail-value">&#8377;
                                                <%=
                                                booking.calculated.gstAmount.toLocaleString('en-IN')
                                                %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Total
                                                (incl. GST):</span>
                                            <span
                                                class="detail-value"><strong>&#8377;
                                                    <%=
                                                    booking.calculated.totalAmount.toLocaleString('en-IN')
                                                    %></strong></span>
                                        </div>
                                    </div>
                                    <% } %>

                                    <% if (booking.status === 'pending') { %>
                                    <div
                                        class="mt-3 d-flex justify-content-end">
                                        <form method="post"
                                            action="/bookings/<%= booking._id %>/cancel">
                                            <button
                                                class="btn btn-cc-outline btn-sm"
                                                onclick="return confirm('Cancel this booking request?');">
                                                <i
                                                    class="fas fa-times me-1"></i>
                                                Cancel request
                                            </button>
                                        </form>
                                    </div>
                                    <% } %>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } else { %>
            <div class="empty-state">
                <i class="fas fa-calendar-times" style="color: #fe424d;;"></i>
                <% if ((statusCounts && statusCounts.all) > 0) { %>
                <h4 class="text-muted">No bookings match this filter</h4>
                <p class="text-muted">Try viewing all bookings.</p>
                <a href="/my-bookings" class="btn btn-cc">
                    <i class="fas fa-list me-2"
                        style="font-size:30px; vertical-align: middle;"></i>
                    View All
                </a>
                <% } else { %>
                <h4 class="text-muted">No bookings yet</h4>
                <p class="text-muted">You haven't made any booking requests
                    yet.</p>
                <a href="/listings" class="btn btn-cc">
                    <i class="fas fa-search me-2"
                        style="font-size:30px; vertical-align: middle;"></i>
                    Browse Listings
                </a>
                <% } %>
            </div>
            <% } %>
        </div>
    </div>
</div>
