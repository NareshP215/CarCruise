<style>
    .search-btn {
        background-color: #fe424d;
        color: #fff;
        border-radius: 25px;
        padding: 0 1rem 0 1rem;
    }

    .search-btn:hover {
        background-color: #fe424d;
        color: #fff;
    }

    .search-btn i {
        display: inline;
        margin-right: 0.5rem;
    }

    .search-input {
        border-radius: 25px;
        padding: 0.5rem 3rem 0.5rem 3rem;
    }

    .nav-link{
        display: flex;
        align-items: center;
    }
    
    @media (max-width: 767.98px) {
        .search-input {
            padding: 0.5rem 1rem;
        }
        
        .mobile-search-container {
            flex: 1;
            margin: 0 1rem;
        }
        
        .mobile-search-container .form-control {
            border-radius: 20px;
        }
        
        .mobile-search-container .btn {
            border-radius: 25px;
            padding: 0 1rem;
            background-color: #fe424d;
            color: #fff;
        }
        
        .mobile-search-container .btn:hover {
            background-color: #fe424d;
            color: #fff;
        }
        
        .mobile-search-container .btn i {
            display: inline;
            margin-right: 0.5rem;
        }
        
        /* Overlay mobile menu styling */
        .navbar-collapse {
            position: fixed !important;
            top: 0 !important;
            left: 0 !important;
            width: 100% !important;
            height: 100vh !important;
            background-color: rgba(255, 255, 255, 0.98) !important;
            backdrop-filter: blur(10px);
            z-index: 1050 !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            padding: 2rem !important;
            margin: 0 !important;
            border: none !important;
            box-shadow: none !important;
        }
        
        .navbar-collapse:not(.show) {
            display: none !important;
        }
        
        .navbar-collapse.collapsing {
            transition: all 0.3s ease;
        }
        
        .navbar-collapse.show {
            animation: slideIn 0.3s ease;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .mobile-menu-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #6c757d;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 50%;
            transition: all 0.2s ease;
        }
        
        .mobile-menu-close:hover {
            background-color: #f8f9fa;
            color: #495057;
        }
        
        .mobile-menu-items {
            text-align: center;
            width: 100%;
            max-width: 300px;
            margin: 0;
            padding: 0;
        }
        
        /* Override Bootstrap navbar container styles */
        .navbar .container-fluid {
            position: relative;
        }
        
        .navbar-collapse .navbar-nav {
            display: none !important;
        }
        
        .navbar-collapse .mobile-menu-items {
            display: block !important;
        }
        
        .mobile-menu-items .nav-link {
            display: block;
            padding: 1rem 0;
            margin: 0.5rem 0;
            color: #495057;
            font-size: 1.1rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.2s ease;
            border-radius: 8px;
        }
        
        .mobile-menu-items .nav-link:hover {
            background-color: #f8f9fa;
            color: #fe424d;
            transform: translateX(5px);
        }
        
        .mobile-menu-items .nav-link i {
            margin-right: 0.75rem;
            width: 20px;
            text-align: center;
        }
    }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings">
            <i class="fa-solid fa-compass"></i></a>

        <!-- Mobile search (between logo and hamburger) -->
        <div class="d-block d-md-none mobile-search-container">
            <form class="d-flex" role="search" action="/listings/search"
                method="post">
                <input class="form-control me-2 search-input" type="search"
                    placeholder="Search destinations" style="font-weight:560;"
                    name="searchQuery" />
                <button class="btn search-btn" type="submit"><i
                        class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <!-- Desktop navigation -->
            <div class="navbar-nav d-none d-md-flex">
                <a class="nav-link" style="font-weight:560;"
                    href="/listings">Explore</a>
            </div>

            <!-- Desktop search -->
            <div class="navbar-nav ms-auto d-none d-md-flex">
                <form class="d-flex" role="search" action="/listings/search"
                    method="post">
                    <input class="form-control me-2 search-input" type="search"
                        placeholder="Search destinations"
                        style="font-weight:560;" name="searchQuery" />
                    <button class="btn search-btn"
                        type="submit"><i
                            class="fa-solid fa-magnifying-glass"></i>Search</button>
                </form>
            </div>

            <!-- Desktop menu items -->
            <div class="navbar-nav ms-auto d-none d-md-flex">
                <a class="nav-link" href="/listings/new"
                    style="font-weight: 500;">Become a host</a>
                <a class="nav-link" href="/dashboard"
                    style="font-weight: 500;">Dashboard</a>
                <a class="nav-link" href="/my-bookings"
                    style="font-weight: 500;">My Bookings</a>
                <% if(!currUser) { %>
                <a class="nav-link" href="/signup"><b>Sign up</b></a>
                <a class="nav-link" href="/login"><b>Login</b></a>
                <% } %>
                <% if(currUser) { %>
                <a class="nav-link" href="/logout"><b>Log out</b></a>
                <% } %>
            </div>

            <!-- Mobile menu items -->
            <div class="mobile-menu-items d-md-none">
                <button class="mobile-menu-close" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup">
                    <i class="fas fa-times"></i>
                </button>
                <a class="nav-link" href="/listings">
                    <i class="fas fa-search"></i>Explore
                </a>
                <a class="nav-link" href="/listings/new">
                    <i class="fas fa-home"></i>Become a host
                </a>
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt"></i>Dashboard
                </a>
                <a class="nav-link" href="/my-bookings">
                    <i class="fas fa-calendar-check"></i>My Bookings
                </a>
                <% if(!currUser) { %>
                <a class="nav-link" href="/signup">
                    <i class="fas fa-user-plus"></i><b>Sign up</b>
                </a>
                <a class="nav-link" href="/login">
                    <i class="fas fa-sign-in-alt"></i><b>Login</b>
                </a>
                <% } %>
                <% if(currUser) { %>
                <a class="nav-link" href="/logout">
                    <i class="fas fa-sign-out-alt"></i><b>Log out</b>
                </a>
                <% } %>
            </div>
        </div>
    </div>
</nav>